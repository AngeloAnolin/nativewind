{
  "compilerOptions": {
    // Recommended settings for Node 14
    // https://github.com/microsoft/TypeScript/wiki/Node-Target-Mapping
    "lib": ["esnext"],
    "module": "commonjs",
    "target": "esnext",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true
  }
}
